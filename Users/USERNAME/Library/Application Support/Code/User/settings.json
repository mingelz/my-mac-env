{
  // Text Editor
  "editor.guides.bracketPairs": "active",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    120
  ],
  "editor.scrollBeyondLastLine": false,
  "editor.unicodeHighlight.allowedLocales": {
      "zh-hans": true
  },
  "editor.unicodeHighlight.ambiguousCharacters": false,
  // Text Editor - Font
  "editor.fontSize": 18,
  // Text Editor - Formatting
  "editor.formatOnPaste": true,
  // Text Editor - Diff Editor
  "diffEditor.ignoreTrimWhitespace": false,
  // Text Editor - Suggestions
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.quickSuggestions": {
    "comments": "on",
    "strings": "on"
  },
  "editor.suggest.shareSuggestSelections": true,
  // Text Editor - Files
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  // Workbench
  "workbench.startupEditor": "none",
  // Workbench - Appearance
  // "workbench.iconTheme": "material-icon-theme",
  // Workbench - Breadcrumbs
  "breadcrumbs.enabled": false,
  // Workbench - Zen Mode
  "zenMode.hideLineNumbers": false,
  "zenMode.hideTabs": false,
  // Features - Search
  "search.smartCase": true,
  // Features - Extensions
  "extensions.ignoreRecommendations": true,
  // Features - Terminal
  "terminal.integrated.fontSize": 14,
  // Application - Telemetry
  "telemetry.telemetryLevel": "off",
  // Extensions - CSS Language Features - CSS
  "css.format.spaceAroundSelectorSeparator": true,
  "css.lint.duplicateProperties": "warning",
  "css.lint.zeroUnits": "warning",
  // Extensions - CSS Language Features - LESS
  "less.format.spaceAroundSelectorSeparator": true,
  "less.lint.duplicateProperties": "warning",
  "less.lint.zeroUnits": "warning",
  // Extensions - CSS Language Features - SCSS (Sass)
  "scss.format.spaceAroundSelectorSeparator": true,
  "scss.lint.duplicateProperties": "warning",
  "scss.lint.zeroUnits": "warning",
  // Extensions - Git
  "git.branchProtection": [
    "master",
    "main"
  ],
  // Extensions - Markdown
  "markdown.preview.fontSize": 16,

  // == Third Part Extensions ==

  // Extensions(3rd): TODO Highlight
  // * https://github.com/JohnPostlethwait/fixme
  // * https://github.com/atom/language-todo
  // 要高亮的关键字，只要注释中包含关键字就会高亮，不管位置。比如 TODOMVC 这个单词中的 TODO 也会被高亮
  // "todohighlight.keywords": [
  //   "TODO", "FIXME", "XXX", "NOTE", "OPTIMIZE", "HACK", "BUG",
  //   "CHANGED", "REVIEW", "QUESTION", "TEMP", "DEBUG", "WARNING",
  //   "MOCK"
  // ],
  // 通过正则匹配关键字，优先级比上一项高。通过 \\b 保证仅高亮完整单词，从而 TODOMVC 这个单词中的 TODO 将不再被高亮
  // "todohighlight.keywordsPattern": "^\\s+?\\b(TODO|FIXME|XXX|NOTE|OPTIMIZE|HACK|BUG|CHANGED|REVIEW|QUESTION|TEMP|DEBUG|WARNING|MOCK)\\b",

  // Extensions(3rd) - Vim
  // "vim.foldfix": true,
  // "vim.hlsearch": true,
  // "vim.visualstar": true,

  // Extensions(3rd) - Visual Studio IntelliCode
  // "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
}
