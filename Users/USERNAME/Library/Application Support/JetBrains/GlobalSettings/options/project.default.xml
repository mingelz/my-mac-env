<application>
  <component name="ProjectManager">
    <defaultProject>
      <component name="CompilerConfiguration">
        <!-- 开启注解处理 [Build, Execution, Deployment/Compiler/Annotation Processors/Enable annotation processing] -->
        <annotationProcessing>
          <profile default="true" name="Default" enabled="true" />
        </annotationProcessing>
      </component>

      <!-- *.properties 文件编码 [Editor/File Encodings/Properties Files (*.properties)/Default encoding for properties files] -->
      <component name="Encoding" defaultCharsetForPropertiesFiles="UTF-8" />

      <component name="InspectionProjectProfileManager">
        <profile version="1.0">
          <!-- 项目 Inspection 配置 -->
          <option name="myName" value="Project Default" />
          <!-- 检查 serialVersionUID [Editor/Inspectioins/JVM languages/Serializable class without 'serialVersionUID']-->
          <inspection_tool class="SerializableHasSerialVersionUIDField" enabled="true" level="WARNING" enabled_by_default="true" />
          <!-- 检查冗余的 if 语句 [Editor/Inspectioins/Java/Control flow issues/Redundant 'if' statement]-->
          <inspection_tool class="TrivialIf" enabled="true" level="WARNING" enabled_by_default="true">
          <!-- 忽略链式 if 语句，可以更好的保证风格统一性-->
            <option name="ignoreChainedIf" value="true" />
          <!-- 忽略带有简单 assert 的 if 语句，因为可能引起语义变化-->
            <option name="ignoreAssertStatements" value="true" />
          </inspection_tool>
          <!-- 报告 ESLint 检查到的问题 [Editor/Inspectioins/JavaScript and TypeScript/Qode quality tools/ESLint]-->
          <inspection_tool class="Eslint" enabled="true" level="WARNING" enabled_by_default="true" />
          <!-- 报告 TSLint 检查到的问题 [Editor/Inspectioins/JavaScript and TypeScript/Qode quality tools/TSLint]-->
          <inspection_tool class="TsLint" enabled="true" level="WARNING" enabled_by_default="true" />
        </profile>
        <version value="1.0" />
      </component>

      <component name="MavenImportPreferences">
        <option name="generalSettings">
          <MavenGeneralSettings>
            <!-- 始终更新 SNAPSHOT 包 [Build, Execution, Deployment/Build Tools/Maven/Always update snapshots] -->
            <option name="alwaysUpdateSnapshots" value="true" />
          </MavenGeneralSettings>
        </option>
      </component>

      <component name="ProjectLevelVcsManager">
        <!-- 新增文件时不自动提交 [Version Control/Confirmation/When files are created] -->
        <ConfirmationsSetting value="1" id="Add" />
      </component>

      <!-- Project窗口配置，点击右上角齿轮图标进行配置 -->
      <component name="ProjectViewState">
        <!-- 打平没文件的包 [Tree Appearance/Compact Middle Packages]-->
        <option name="hideEmptyMiddlePackages" value="true" />
        <!-- 文件列表按类型排序（先按类型再按名称） [Tree Appearance/Sort by Type]-->
        <option name="sortByType" value="true" />
      </component>

      <component name="SpringGeneralSettings">
        <!-- 自动配置 Spring [Languages & Frameworks/Spring/Common/Allow to auto-configure] -->
        <option name="allowAutoConfigurationMode" value="true" />
      </component>

      <component name="VcsManagerConfiguration">
        <!-- 清空上一次的提交信息 [Version Control/Commit/Clear initial commit message] -->
        <option name="CLEAR_INITIAL_COMMIT_MESSAGE" value="true" />
      </component>

      <component name="XDebuggerManager">
        <breakpoint-manager>
          <breakpoints-defaults>
            <!-- 断点仅应用到线程级 [Breakpoints/Java Exception Breakpoints/Suspend] -->
            <breakpoint suspend="THREAD" type="java-exception" />
            <!-- 断点仅应用到线程级 [Breakpoints/Java Line Breakpoints/Suspend] -->
            <breakpoint suspend="THREAD" type="java-line" />
          </breakpoints-defaults>
        </breakpoint-manager>
      </component>
    </defaultProject>
  </component>
</application>
